---
import { siteConfig } from "../config";
---

<div
  id="hero"
  class="relative isolate overflow-hidden bg-white py-16 md:py-0 md:min-h-screen flex items-center"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Clean gradient overlay -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 900px 1200px at 0% 0%, ${siteConfig.accentColor}18 0%, ${siteConfig.accentColor}0a 40%, transparent 70%)`}
  ></div>

  <!-- Subtle grid pattern (no programming symbols) -->
  <svg
    aria-hidden="true"
    class="absolute inset-0 -z-10 size-full stroke-gray-200/60 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
  >
    <defs>
      <pattern
        id="grid-pattern"
        x="50%"
        y={-1}
        width={200}
        height={200}
        patternUnits="userSpaceOnUse"
      >
        <path d="M.5 200V.5H200" fill="none"></path>
      </pattern>
    </defs>
    <rect fill="url(#grid-pattern)" width="100%" height="100%" stroke-width={0}></rect>
  </svg>

  <div class="w-full mx-auto px-6 sm:px-12 md:px-24 py-8">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-16">
      <!-- Profile Photo -->
      <div class="flex-shrink-0 animate-fade-in">
        <div
          class="w-40 h-48 sm:w-48 sm:h-56 md:w-56 md:h-64 rounded-2xl overflow-hidden shadow-xl ring-1 ring-gray-200/60"
        >
          <img
            src={`${import.meta.env.BASE_URL}/profile.jpg`}
            alt={siteConfig.name}
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      <!-- Text Content -->
      <div class="text-center md:text-left">
        <h1
          class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-gray-900 animate-fade-in animation-delay-200"
        >
          {siteConfig.name}
        </h1>
        <p
          class="mt-3 text-lg sm:text-xl md:text-2xl font-medium animate-fade-in animation-delay-300"
          style={`color: ${siteConfig.accentColor}`}
        >
          {siteConfig.title}
        </p>
        {siteConfig.location && (
          <p class="mt-1 text-sm sm:text-base text-gray-500 animate-fade-in animation-delay-300">
            {siteConfig.location}
          </p>
        )}
        {siteConfig.tagline && (
          <p class="mt-4 text-base sm:text-lg text-gray-600 max-w-2xl italic animate-fade-in animation-delay-400">
            "{siteConfig.tagline}"
          </p>
        )}

        <!-- Stats Row -->
        {siteConfig.stats && siteConfig.stats.length > 0 && (
          <div class="mt-6 flex flex-wrap justify-center md:justify-start gap-4 sm:gap-6 animate-fade-in animation-delay-500">
            {siteConfig.stats.map((stat) => (
              <div class="text-center px-4 py-2 bg-gray-50 rounded-lg border border-gray-100">
                <div class="text-xl sm:text-2xl font-bold" style={`color: ${siteConfig.accentColor}`}>
                  {stat.value}
                </div>
                <div class="text-xs sm:text-sm text-gray-500 font-medium">{stat.label}</div>
              </div>
            ))}
          </div>
        )}

        <!-- Social Icons -->
        <div class="mt-6 flex justify-center md:justify-start gap-4 animate-fade-in animation-delay-600">
          {siteConfig.social?.email && (
            <a
              href={`mailto:${siteConfig.social.email}`}
              aria-label="Email"
              class="text-gray-500 transition-colors duration-300 hover:text-[var(--accent-color)]"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5 sm:h-6 sm:w-6">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
                <path d="M3 7l9 6l9 -6" />
              </svg>
            </a>
          )}
          {siteConfig.social?.linkedin && (
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="LinkedIn"
              class="text-gray-500 transition-colors duration-300 hover:text-[var(--accent-color)]"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5 sm:h-6 sm:w-6">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M8 11v5" /><path d="M8 8v.01" /><path d="M12 16v-5" />
                <path d="M16 16v-3a2 2 0 1 0 -4 0" />
                <path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" />
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-300 {
    animation-delay: 0.3s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .animation-delay-500 {
    animation-delay: 0.5s;
  }

  .animation-delay-600 {
    animation-delay: 0.6s;
  }
</style>
